<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="App\Orders\Domain\Aggregate\Product" table="orders_product">
        <id name="id" type="integer">
            <generator/>
        </id>

        <many-to-one field="order" target-entity="App\Orders\Domain\Aggregate\Order" inversed-by="order"
                     fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="order_id" nullable="true"/>
        </many-to-one>

        <many-to-one field="roll" target-entity="App\Orders\Domain\Aggregate\Roll\Roll" inversed-by="roll"
                     fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="roll_id" nullable="true"/>
        </many-to-one>

        <field name="status"
               enum-type="App\Orders\Domain\ValueObject\Status"
               column="status"
               length="255"
        />

        <field name="length" type="decimal" column="length" nullable="true" precision="15" scale="2"/>

        <field name="laminationType"
               enum-type="App\Orders\Domain\ValueObject\LaminationType"
               column="lamination_type"
               length="255"
               nullable="true"
        />

        <field name="filmType"
               enum-type="App\Orders\Domain\ValueObject\FilmType"
               column="film_type"
               length="255"
               nullable="true"
        />

        <field name="hasPriority"
               type="boolean"
               column="has_priority"
               length="255"
               nullable="true"
        />

        <field name="sortOrder" type="integer" column="sort_order" nullable="true">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="isPacked" type="boolean" column="is_packed">
            <options>
                <option name="default">false</option>
            </options>
        </field>

        <one-to-one field="cutFile" target-entity="App\Shared\Domain\Entity\MediaFile">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="cut_file_id"/>
        </one-to-one>
        <one-to-one field="printFile" target-entity="App\Shared\Domain\Entity\MediaFile">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="print_file_id"/>
        </one-to-one>

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>
    </entity>
</doctrine-mapping>