<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="App\Orders\Domain\Aggregate\OrderStack\OrderStack" table="order_stacks">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="255"/>

        <many-to-many field="orders" target-entity="App\Orders\Domain\Aggregate\Order\Order">
            <join-table name="order_stacks_orders">
                <join-columns>
                    <join-column name="order_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="order_stack_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <field name="status"
               enum-type="App\Orders\Domain\Aggregate\ValueObject\Status"
               type="string"
               column="status"
               length="255"
        />

        <field name="length"
               type="bigint"
               column="length"
        />

        <field name="laminationType"
               enum-type="App\Orders\Domain\Aggregate\ValueObject\LaminationType"
               type="string"
               column="lamination_type"
               length="255"
               nullable="true"
        />

        <field name="rollType"
               enum-type="App\Orders\Domain\Aggregate\Roll\RollType"
               type="string"
               column="roll_type"
               length="255"
               nullable="true"
        />

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>

        <field name="updatedAt" type="datetime" column="updated_at"/>

    </entity>
</doctrine-mapping>