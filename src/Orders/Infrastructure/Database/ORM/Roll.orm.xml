<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Orders\Domain\Aggregate\Roll" table="orders_roll">
        <id name="id" type="integer">
            <generator/>
        </id>
        <field name="name" column="name" length="255"/>

        <field name="filmId" type="integer" column="film_id" nullable="true"/>

        <field name="process" enum-type="App\Orders\Domain\ValueObject\Process" column="process" length="255" nullable="true"/>

        <many-to-one field="printer" target-entity="App\Orders\Domain\Aggregate\Printer" fetch="EXTRA_LAZY" />

        <many-to-many field="orders" target-entity="App\Orders\Domain\Aggregate\Order" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-detach/>
                <cascade-remove/>
            </cascade>
            <join-table name="orders_roll_order">
                <join-columns>
                    <join-column name="roll_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="order_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>
    </entity>
</doctrine-mapping>