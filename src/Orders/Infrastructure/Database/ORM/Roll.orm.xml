<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Orders\Domain\Aggregate\Roll" table="orders_roll">
        <id name="id" type="integer">
            <generator/>
        </id>
        <field name="name" column="name" length="255"/>

        <field name="rollType" enum-type="App\Orders\Domain\ValueObject\RollType" column="roll_type" length="255"/>

        <field name="laminationTypes" type="json" enum-type="App\Orders\Domain\ValueObject\LaminationType" column="lamination_types"/>

        <many-to-many field="printer" target-entity="App\Orders\Domain\Aggregate\Printer" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="orders_roll_printer">
                <join-columns>
                    <join-column name="printer_id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="order_roll_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="orders" target-entity="App\Orders\Domain\Aggregate\Order" mapped-by="roll"/>

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>
    </entity>
</doctrine-mapping>