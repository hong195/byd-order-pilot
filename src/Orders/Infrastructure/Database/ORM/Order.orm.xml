<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="App\Orders\Domain\Aggregate\Order" table="orders_order">
        <id name="id" type="integer">
            <generator/>
        </id>

        <field name="status"
               enum-type="App\Orders\Domain\ValueObject\Status"
               column="status"
               length="255"
        />

        <field name="length" type="bigint" column="length"  nullable="true"/>

        <field name="laminationType"
               enum-type="App\Orders\Domain\ValueObject\LaminationType"
               column="lamination_type"
               length="255"
               nullable="true"
        />

        <field name="filmType"
               enum-type="App\Orders\Domain\ValueObject\FilmType"
               column="film_type"
               length="255"
               nullable="true"
        />

        <field name="hasPriority"
               type="boolean"
               column="has_priority"
               length="255"
               nullable="true"
        />

        <field name="productType"
               enum-type="App\Orders\Domain\ValueObject\ProductType"
               column="product_type"
               length="255"
        />

        <field name="orderNumber" type="bigint" column="order_number"  nullable="true"/>

        <field name="sortOrder" type="integer" column="sort_order">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>

        <one-to-one field="cutFile" target-entity="App\Shared\Domain\Entity\MediaFile">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="cut_file_id"/>
        </one-to-one>
        <one-to-one field="printFile" target-entity="App\Shared\Domain\Entity\MediaFile">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-column name="print_file_id"/>
        </one-to-one>

        <many-to-one field="roll" target-entity="App\Orders\Domain\Aggregate\Roll" inversed-by="orders" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist />
            </cascade>
            <join-column name="roll_id" nullable="true" />
        </many-to-one>

        <one-to-many field="extras" target-entity="App\Orders\Domain\Aggregate\Extra" mapped-by="order" fetch="EXTRA_LAZY" >
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>