<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="App\Inventory\Domain\Aggregate\History" table="inventory_history">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="filmId" type="integer" column="film_id"/>

        <field name="filmType" column="film_type"/>

        <field name="eventType" column="event_type"/>

        <field name="changeAmount" type="decimal" column="change_amount" precision="15" scale="2"/>

        <field name="remainingSize" type="decimal" column="remaining_size" precision="15" scale="2"/>

        <field name="createdAt" type="datetime_immutable" column="created_at"/>
    </entity>
</doctrine-mapping>