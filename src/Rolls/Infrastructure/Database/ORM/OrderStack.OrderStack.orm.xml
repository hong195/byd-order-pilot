<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="App\Rolls\Domain\Aggregate\OrderStack\OrderStack" table="order_stacks">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="255"/>

        <field name="status"
               enum-type="App\Rolls\Domain\Aggregate\Order\ValueObject\Status"
               type="string"
               column="status"
               length="255"
        />

        <field name="laminationType"
               enum-type="App\Rolls\Domain\Aggregate\Lamination\LaminationType"
               type="string"
               column="lamination_type"
               length="255"
               nullable="true"
        />

        <field name="rollType"
               enum-type="App\Rolls\Domain\Aggregate\Roll\RollType"
               type="string"
               column="roll_type"
               length="255"
               nullable="true"
        />

        <field name="priority" type="integer" column="priority"/>

        <field name="dateAdded" type="datetime" column="date_added"/>

        <field name="updatedAt" type="datetime" column="updated_at"/>

    </entity>
</doctrine-mapping>