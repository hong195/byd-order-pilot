<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="App\Rolls\Domain\Aggregate\Order\Order" table="orders">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="status"
               enum-type="App\Rolls\Domain\Aggregate\Order\ValueObject\Status"
               type="string"
               column="status"
               length="255"
        />

        <field name="length" type="bigint" column="length"  nullable="true"/>

        <field name="laminationType"
               enum-type="App\Rolls\Domain\Aggregate\Lamination\LaminationType"
               type="string"
               column="lamination_type"
               length="255"
               nullable="true"
        />

        <field name="rollType"
               enum-type="App\Rolls\Domain\Aggregate\Roll\RollType"
               type="string"
               column="roll_type"
               length="255"
               nullable="true"
        />

        <field name="priority"
               enum-type="App\Rolls\Domain\Aggregate\Order\Priority"
               type="string"
               column="priority"
               length="255"
               nullable="true"
        />

        <field name="productType"
               enum-type="App\Rolls\Domain\Aggregate\Order\ProductType"
               type="string"
               column="product_type"
               length="255"
        />

        <field name="orderNumber" type="bigint" column="order_number"  nullable="true"/>

        <field name="dateAdded" type="datetime" column="date_added"/>

        <one-to-one field="cutFile" target-entity="App\Shared\Domain\Entity\MediaFile" cascade="persist, remove">
            <join-column name="cut_file_id" referenced-column-name="id" nullable="true"/>
        </one-to-one>
        <one-to-one field="printFile" target-entity="App\Shared\Domain\Entity\MediaFile" cascade="persist, remove">
            <join-column name="print_file_id" referenced-column-name="id" nullable="true"/>
        </one-to-one>

    </entity>
</doctrine-mapping>