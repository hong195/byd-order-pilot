<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\ProductionProcess\Domain\Aggregate\Roll\Roll" table="orders_roll">
        <id name="id" type="integer">
            <generator/>
        </id>
        <field name="name" column="name" length="255"/>

        <many-to-one field="parentRoll" target-entity="App\ProductionProcess\Domain\Aggregate\Roll\Roll" fetch="EXTRA_LAZY" >
            <join-column name="parent_roll_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>

        <field name="employeeId" type="integer" column="employee_id"  nullable="true"/>

        <field name="filmId" type="integer" column="film_id" nullable="true"/>

        <field name="process" enum-type="App\ProductionProcess\Domain\ValueObject\Process" column="process" length="255" nullable="true"/>

        <many-to-one field="printer" target-entity="App\ProductionProcess\Domain\Aggregate\Printer" fetch="EXTRA_LAZY" />

        <one-to-many field="products" target-entity="App\ProductionProcess\Domain\Aggregate\Product" mapped-by="roll" fetch="EXTRA_LAZY" >
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <field name="dateAdded" type="datetime_immutable" column="date_added"/>
    </entity>
</doctrine-mapping>